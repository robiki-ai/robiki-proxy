{
  "name": "@robiki/proxy",
  "version": "1.0.3",
  "description": "A flexible HTTP/2 proxy server with WebSocket support, configurable routing, CORS, and validation. Use as npm package or Docker container.",
  "keywords": [
    "proxy",
    "http2",
    "websocket",
    "reverse-proxy",
    "docker",
    "cors",
    "ssl",
    "tls",
    "routing",
    "middleware"
  ],
  "homepage": "https://github.com/robiki-ai/robiki-proxy#readme",
  "bugs": {
    "url": "https://github.com/robiki-ai/robiki-proxy/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/robiki-ai/robiki-proxy.git"
  },
  "license": "MIT",
  "author": "Robiki sp. z o.o.",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./config": {
      "import": "./dist/utils/config.js",
      "types": "./dist/utils/config.d.ts"
    }
  },
  "bin": {
    "robiki-proxy": "./dist/index.js"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "pkgroll",
    "dev": "node --watch src/index.ts",
    "start": "node dist/index.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:docker": "make test-docker-full",
    "test:docker:config": "make test-docker-config",
    "test:all": "yarn test && yarn test:docker",
    "prepublishOnly": "yarn build",
    "publish:npm": "npm publish",
    "publish:docker": "make docker-push-hub",
    "publish:docker:multiarch": "make docker-push-multiarch",
    "publish:all": "yarn publish:npm && yarn publish:docker"
  },
  "devDependencies": {
    "@types/node": "25.0.3",
    "@types/supertest": "6.0.2",
    "@vitest/coverage-v8": "4.0.16",
    "@vitest/ui": "2.1.8",
    "pkgroll": "2.21.4",
    "supertest": "7.1.4",
    "typescript": "5.9.3",
    "vitest": "4.0.16"
  },
  "dependencies": {
    "@types/ws": "8.18.1",
    "tsx": "4.19.2",
    "ws": "8.19.0"
  },
  "engines": {
    "node": ">=21.0.0"
  },
  "packageManager": "yarn@1.22.22",
  "publishConfig": {
    "access": "public"
  }
}
